<!DOCTYPE html>
<html lang="pt-br">
    <%- include('../partials/settings/head') %>
    <%- include('../partials/settings/header') %>

<body>
    <div class="container">
        <h1>Gerenciar Status dos Pedidos</h1>

        <!-- FormulÃ¡rio para criar novo status -->
        <form action="/settings/order-status/create" method="POST" class="mb-4">
            <div class="form-group">
                <label for="status_name">Novo Status</label>
                <input type="text" id="status_name" name="status_name" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success mt-2">Criar Status</button>
        </form>

        <hr>

        <h2>Status Existentes</h2>
        <ul class="list-group">
            <% orderStatusList.forEach(status => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= status.status_name %>
                    <form action="/settings/order-status/delete" method="POST" style="display:inline;">
                        <input type="hidden" name="id" value="<%= status.id %>">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </li>
            <% }) %>
        </ul>

    </div>
</body>
</html>
