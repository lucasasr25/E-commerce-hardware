<!DOCTYPE html>
<html lang="pt-br">
    <%- include('../partials/settings/head') %>
    <%- include('../partials/settings/header') %>

<body>
    <div class="container">
        <h1>Cadastro de Fornecedor</h1>

        <!-- Formulário para criar novo fornecedor -->
        <form action="/settings/product-supplier/create" method="POST" class="mb-4">
            <div class="form-group">
                <label for="name">Nome do Fornecedor</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="tax_id">CNPJ ou Identificação Fiscal</label>
                <input type="text" id="tax_id" name="tax_id" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="phone">Telefone</label>
                <input type="text" id="phone" name="phone" class="form-control">
            </div>

            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" class="form-control">
            </div>

            <div class="form-group">
                <label for="address">Endereço</label>
                <textarea id="address" name="address" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-success mt-2">Cadastrar Fornecedor</button>
        </form>

        <hr>

        <h2>Fornecedores Cadastrados</h2>
        <ul class="list-group">
            <% supplierList.forEach(supplier => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= supplier.name %></strong> - <%= supplier.tax_id %><br>
                        <small><%= supplier.phone %> | <%= supplier.email %></small><br>
                        <small><%= supplier.address %></small>
                    </div>
                    <form action="/settings/product-supplier/delete" method="POST" style="display:inline;">
                        <input type="hidden" name="id" value="<%= supplier.id %>">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </li>
            <% }) %>
        </ul>

    </div>
</body>
</html>
