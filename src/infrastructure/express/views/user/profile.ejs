<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Cliente - E-commerce</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/user.css">
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <a href="/user/returns"><i class="material-icons">swap_horiz</i>Trocas</a>
        <a href="/user/orders"><i class="material-icons">swap_vert</i>Pedidos</a>
        <a href="/main" class="btn btn-primary">
            <i class="material-icons">shopping_cart</i> Comprar
        </a>
        <a href="/user/settings"><i class="material-icons">settings</i>Configurações</a>
    </div>

    <!-- Conteúdo do Perfil -->
    <div class="container">
        <h1>Perfil do Cliente</h1>

        <!-- Exibição das informações do cliente -->
        <div class="section">
            <div class="section-header">
                <i class="material-icons icon">account_circle</i>
                <h2>Informações do Cliente</h2>
            </div>
            <div class="form-group">
                <label for="client-name">Nome</label>
                <input type="text" id="client-name" value="<%= client.name %>" disabled>
            </div>
            <div class="form-group">
                <label for="client-email">Email</label>
                <input type="email" id="client-email" value="<%= client.email %>" disabled>
            </div>
            <div class="form-group">
                <label for="client-phone">Telefone</label>
                <input type="text" id="client-phone" value="<%= client.phone_numbers[0] %>" disabled>
            </div>
        </div>

        <!-- Seção de Endereço de Entrega -->
        <div class="section">
            <div class="section-header">
                <i class="material-icons icon">location_on</i>
                <h2>Endereços de Entrega</h2>
            </div>
            <div class="form-group">
                <label for="address-select">Escolha o Tipo de endereço:</label>
                <select id="address-select">
                    <option value="">Selecione um endereço</option>
                    <% addresses.forEach(function(address) { %>
                        <option value="<%= address.id %>" <%= address.is_default ? 'selected' : '' %>> <%= address.street %>, <%= address.city %> </option>
                    <% }); %>
                </select>
            </div>
            <button class="button" onclick="window.location.href='/user/userEditView'">Editar informações de usuário</button>
        </div>

        <!-- Seção de Cartão de Crédito -->
        <div class="section">
            <div class="section-header">
                <i class="material-icons icon">credit_card</i>
                <h2>Formas de Pagamento</h2>
            </div>
            <div class="form-group">
                <label for="card-select">Escolha um cartão de crédito:</label>
                <select id="card-select">
                    <option value="">Selecione um cartão</option>
                    <% cards.forEach(function(card) { %>
                        <option value="<%= card.id %>" <%= card.is_default ? 'selected' : '' %>> <%= card.card_number %> </option>
                    <% }); %>
                </select>
            </div>
            <button class="button" onclick="window.location.href='/user/card'">Editar cartões</button>
        </div>
    </div>

</body>

</html>
