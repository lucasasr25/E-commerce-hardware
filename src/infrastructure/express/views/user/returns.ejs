<!DOCTYPE html>
<html lang="pt-br">
<%- include('../partials/settings/head') %>
<%- include('../partials/settings/header') %>

<body>
  <div class="container">
    <h1>Minhas Trocas</h1>

    <% if (returns.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Status da Troca</th>
            <th>Data da Solicitação</th>
            <th>ID do Pedido</th>
            <th>Data do Pedido</th>
            <th>Valor Total</th>
            <th>Status do Pedido</th>
            <th>Cupom</th>
          </tr>
        </thead>
        <tbody>
          <% returns.forEach(ret => { %>
            <tr>
              <td><%= ret.product_name %></td>
              <td><%= ret.quantity %></td>
              <td><%= ret.status_name %></td>
              <td><%= new Date(ret.created_at).toLocaleDateString("pt-BR") %></td>
              <td>#<%= ret.order_id %></td>
              <td><%= new Date(ret.order_date).toLocaleDateString("pt-BR") %></td>
              <td>R$ <%= ret.order_total.replace('.', ',') %></td>
              <td><%= ret.order_status %></td>
              <td></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Você ainda não solicitou nenhuma troca.</p>
    <% } %>

    <a href="/user/orders" class="btn btn-secondary mt-3">Voltar aos Pedidos</a>
  </div>
</body>
</html>
