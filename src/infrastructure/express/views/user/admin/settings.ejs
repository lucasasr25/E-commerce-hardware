<!DOCTYPE html>
<html lang="pt-BR">
<%- include('../../partials/settings/head') %>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/user">← Voltar para Perfil</a>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center mb-5">⚙️ Painel de Configurações</h1>

        <div class="row g-4">
            <!-- Gestão de Produtos -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white fw-bold">
                        Produtos
                    </div>
                    <div class="card-body d-grid gap-3">
                        <a href="/product/view" class="btn btn-primary">Gerenciar Produtos</a>
                        <a href="/settings/product-category" class="btn btn-outline-primary">Gerenciar Categorias</a>
                        <a href="/settings/pricebook" class="btn btn-outline-primary">Grupos de Preço</a>
                    </div>
                </div>
            </div>

            <!-- Gestão de Clientes -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white fw-bold">
                        Clientes
                    </div>
                    <div class="card-body d-grid gap-3">
                        <a href="/client/clients" class="btn btn-success">Gerenciar Clientes</a>
                        <a href="/settings/returns" class="btn btn-success">Trocas</a>
                        <a href="/settings/return-status" class="btn btn-success">Status de Devolução</a>
                    </div>
                </div>
            </div>

            <!-- Pedidos e Pagamentos -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-info text-white fw-bold">
                        Pedidos & Pagamentos
                    </div>
                    <div class="card-body d-grid gap-3">
                        <a href="/settings/order-status" class="btn btn-info text-white">Status dos Pedidos</a>
                        <a href="/settings/payment-status" class="btn btn-info text-white">Status de Pagamento</a>
                        <a href="/settings/coupons" class="btn btn-info text-white">Cupons Promocionais</a>
                    </div>
                </div>
            </div>
            <br>
            <!-- Estoque e Fornecedores -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-warning text-dark fw-bold">
                        Estoque & Fornecedores
                    </div>
                    <div class="card-body d-grid gap-3">
                        <a href="/settings/entry" class="btn btn-warning text-dark">Gerenciar Estoque</a>
                        <a href="/settings/suppliers" class="btn btn-warning text-dark">Fornecedores</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
