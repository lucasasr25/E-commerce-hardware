<!-- Preview do Carrinho -->
<style>
    #cart-preview-content {
        background-color: #f8f9fa;
        padding: 15px;
        width: 320px;
        border-radius: 12px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        position: fixed;
        right: 30px;
        bottom: 180px;
        z-index: 9999;
        font-family: Arial, sans-serif;
        color: #333;
    }

    #cart-preview-content strong {
        display: block;
        font-size: 18px;
        margin-bottom: 10px;
        color: #0056b3;
    }

    #cart-items-list {
        list-style: none;
        padding-left: 0;
        margin-bottom: 15px;
    }

    #cart-items-list li {
        font-size: 14px;
        line-height: 1.5;
        padding: 5px 0;
        border-bottom: 1px solid #e0e0e0;
    }

    #cart-items-list li:last-child {
        border-bottom: none;
    }

    .total-section {
        font-size: 16px;
        font-weight: bold;
        margin-top: 10px;
        color: #333;
    }

    .total-price {
        font-size: 22px;
        color: #d9534f;
        margin: 5px 0;
    }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        margin-top: 10px;
        text-decoration: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        font-size: 14px;
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-sm {
        font-size: 14px;
    }

</style>

<div id="cart-preview-content">
    <strong>Seu Carrinho</strong>
    <ul id="cart-items-list">
        <% if (items && items.length > 0) { %>
            <% items.forEach(item => { %>
                <li><%= item.name %> - Quantidade: <%= item.quantity %></li>
            <% }) %>
        <% } else { %>
            <li>Seu carrinho est√° vazio.</li>
        <% } %>
    </ul>
    <% if (items && items.length > 0) { %>
        <div class="total-section">
            <span>Total</span>
            <h2 class="total-price">R$ <%= total.replace(".", ",") %></h2>
            <a href="/cart/view" class="btn btn-primary btn-sm">Ver Carrinho</a>
        </div>
    <% } else { %>
        <a href="/cart/view" class="btn btn-primary btn-sm">Ver Carrinho</a>
    <% } %>
</div>
