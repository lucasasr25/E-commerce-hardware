<style>
    .floating-button {
        position: fixed;
        right: 30px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        font-size: 24px;
        cursor: pointer;
        z-index: 9999;
    }

    #chatbot-button {
        bottom: 30px;
    }

    #chatbot-window {
        position: fixed;
