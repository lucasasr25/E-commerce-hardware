<button id="chatbot-button" class="floating-button">ðŸ’¬</button>

<div id="chatbot-window">
    <div id="chatbot-header">Atendimento</div>
    <div id="chatbot-messages">
        <p><strong>Bot:</strong> OlÃ¡! Como posso te ajudar hoje?</p>
    </div>
    <div id="chatbot-input">
        <input type="text" id="chatbot-text" placeholder="Digite sua mensagem..." />
        <button onclick="sendChat()">Enviar</button>
    </div>
</div>

<script>
    const botButton = document.getElementById('chatbot-button');
    const botWindow = document.getElementById('chatbot-window');
    const botMessages = document.getElementById('chatbot-messages');
    const botText = document.getElementById('chatbot-text');

    botButton.addEventListener('click', () => {
        botWindow.style.display = botWindow.style.display === 'flex' ? 'none' : 'flex';
    });

    function sendChat() {
        const message = botText.value.trim();
        if (message !== "") {
            const userMsg = document.createElement('p');
            userMsg.innerHTML = `<strong>VocÃª:</strong> ${message}`;
            botMessages.appendChild(userMsg);
            botText.value = "";

            setTimeout(() => {
                const botReply = document.createElement('p');
                botReply.innerHTML = `<strong>Bot:</strong> Essa funcionalidade ainda estÃ¡ em desenvolvimento ðŸ˜‰`;
                botMessages.appendChild(botReply);
                botMessages.scrollTop = botMessages.scrollHeight;
            }, 500);
        }
    }
</script>
