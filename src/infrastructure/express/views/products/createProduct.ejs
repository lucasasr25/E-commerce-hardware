<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Produto</title>
    <link rel="stylesheet" href="/css/crud.css"> <!-- Estilos personalizados -->
</head>
<body>
    <h1>Criar Novo Produto</h1>

    <!-- Formulário para criar um novo produto -->
    <form action="/product/products" method="POST">
        <div>
            <label for="name">Nome do Produto:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="description">Descrição:</label>
            <textarea id="description" name="description"></textarea>
        </div>
        <div>
            <label for="price">Valor de custo:</label>
            <input type="number" id="price" name="price" required step="0.01">
        </div>

        <div>
            <label for="price">Quantidade:</label>
            <input type="number" id="qtd" name="qtd" required step="0.01">
        </div>

        <div>   
            <label for="price">Fornecedor:</label>
            <select id="supplier_id" name="supplier_id" class="form-control" required style="height: 50px;">
                    <option value="">Selecione um Fornecedor</option>
                    <% supplierList.forEach(supplier => { %>
                        <option value="<%= supplier.id %>"><%= supplier.name %></option>
                    <% }) %>
                </select>
        </div>

        <div>
          <label for="category_id">Categoria do Produto</label>
                <select id="category_id" name="category_id" class="form-control" required style="height: 50px;">
                    <option value="">Selecione uma categoria</option>
                    <% productCategoryList.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
        </div>
       
        <!-- Detalhes do Produto -->
        <div>
            <label for="manufacturer">Fabricante:</label>
            <input type="text" id="manufacturer" name="manufacturer">
        </div>
        <div>
            <label for="warranty_period">Período de Garantia (meses):</label>
            <input type="number" id="warranty_period" name="warranty_period" step="1">
        </div>
        <div>
            <label for="weight">Peso (kg):</label>
            <input type="number" id="weight" name="weight" step="0.01">
        </div>
        <div>
            <label for="dimensions">Dimensões (cm):</label>
            <input type="text" id="dimensions" name="dimensions">
        </div>
        <div>
            <label for="color">Cor:</label>
            <input type="text" id="color" name="color">
        </div>
        <div>
            <label for="material">Material:</label>
            <input type="text" id="material" name="material">
        </div>

        <div>
            <button type="submit">Criar Produto</button>
        </div>
    </form>

    <!-- Link para retornar à lista de produtos -->
    <br>
    <a href="/product/view">Voltar para a lista de produtos</a>

</body>
</html>
